new_local_repository(
    name = "cuda",
    path = "/usr/local/cuda-11.4/include",
    build_file_content = """
cc_library(
  name = "cuda",
  hdrs = glob(["**/*.h", "**/*.hpp"]),
  visibility = ["//visibility:public"]
)
"""
)

